{
  "name": "frontend-setup",
  "version": "2.6.1",
  "license": "MIT",
  "description": "A basic project setup for creating (static) html templates. Filled with automated tasks and configuration options.",
  "author": "Dept",
  "contributors": [
    {
      "name": "Adrian Klingen",
      "email": "adrian.klingen@deptagency.com"
    },
    {
      "name": "Dylan Vens",
      "email": "dylan.vens@deptagency.com"
    },
    {
      "name": "Tim de Wolf",
      "email": "tim.dewolf@deptagency.com"
    }
  ],
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/tamtam-nl/tamtam-frontend-setup"
  },
  "engines": {
    "node": "^12",
    "npm": "^6"
  },
  "browserslist": [
    "defaults",
    "> 1%",
    "not IE 11"
  ],
  "jira-prepare-commit-msg": {
    "messagePattern": "$J: $M",
    "allowEmptyCommitMessage": true
  },
  "scripts": {
    "postinstall": "dept-builder yarn-install-recursive --dirs source/components,source/utilities --ignore node_modules",
    "deploy": "dept-builder deploy",
    "start": "dept-builder start",
    "favicons": "dept-builder favicons",
    "generate": "dept-builder generate",
    "prepare": "husky install"
  },
  "devDependencies": {
    "dept-builder": "git+https://bitbucket.org/tamtam-nl/tamtam-frontend-builder.git#2.1.0",
    "husky": "^7.0.0",
    "jira-prepare-commit-msg": "^1.6.1"
  }
}
